.i-card {
  margin: 10rpx 1rpx;
  font-size: 14px;
  overflow: hidden;
  position: relative;
  background: #fff;
  border: 1rpx solid #dddee1;
  border-radius: 5%
}

.i-card-full {
  margin: 0;
  border-left: none;
  border-right: none;
  border-radius: 0
}

.i-card-header {
  display: flex;
  padding: 6px 16px;
  align-items: center;
}
.i-card-header-content-name{
  color: rgb(97, 97, 97);
  font-size: 20rpx;
}
.i-card-header-content-title{
  margin-left: 2%;
  color: #1c2438;
  font-size: 10;
}

.i-card-header-content {
  text-align: left;
  display: block;
  width: 20%;
}


.i-card-header-thumb {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  position: relative;
  margin-left: auto;
  margin-right: auto;
  overflow: hidden;
  background-size: cover;
  vertical-align: middle;
  border-radius: 50%;
}

.i-card-header-title {
  display: inline-block;
  vertical-align: middle;
  font-size: 14px;
  color: #3d3b3b1f
}

.i-card-header-extra {
  flex: 1;
  text-align: right;
  font-size: 14px;
  color: #80848f;
}
.content {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  word-break: break-all;
   overflow: hidden;
   -webkit-line-clamp: 1;
 }

.i-card-body {
  position: relative;
  padding: 0px 10px;
  color: #495060;
  font-size: 14px;
}

.i-card-body::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e9eaec;
  border-top-width: 1px
}

.i-card-footer {
  position: relative;
  padding: 6px 16px;
  color: #80848f;
  font-size: 12px
}