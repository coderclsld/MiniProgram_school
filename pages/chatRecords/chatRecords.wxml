<i-sticky scrollTop="{{scrollTop}}" >
    <icon type="clear" size="30" style="margin-top:60rpx;margin-left:10rpx" bindtap="lxr" ></icon> <!--110-->
    <!-- <icon type="clear" size="30" style="margin-top:60rpx;margin-left:10rpx" bindtap="zy" ></icon> -->
</i-sticky>
<view class="message" wx:for="{{chat}}" wx:for-item="item" wx:key="index" bindtap="enterChatting" data-item='{{item}}'>
  <!-- <image class="left" src="{{item.usericon}}"></image> -->
  <view class="message-info">
    <view class="right">
      <text class="senderName">{{item.username}}</text>
      <text class="sendMessage">{{item.message}}</text>
    </view>
    <view>
      <text class="sendDate">{{item.time}}</text>
    </view>
    <view style="background-color:red;color:black;border-radius:45%;width:20rpx;height:20rpx" wx:if="{{!item.isread}}"></view>
  </view>
</view>