/* pages/lxr/lxr.wxss */
input{
  border:1px solid black;
  margin-left:30rpx;
  margin-right: 30rpx;
  height: 70rpx;
  padding-left: 60rpx;
  border-radius: 50rpx;
  margin-top: 10rpx;
}
icon{
  position: absolute;
  top:24rpx;
  left: 40rpx;
}
.ax{
  width: 100%;
  height: 94rpx;
  padding-top: 15rpx;
}
.message{
  display: flex;
  width: 100%;
  justify-content: space-around;
  box-shadow:0rpx 2rpx 5rpx 5rpx rgba(85, 85, 85, 0.10);
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  height: 60rpx;
  background: #ffffff;
}
.message-info{
  display: flex;
  width: 78%;
  justify-content: space-between;
}
.right{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  padding-top: 10rpx;
}
.sendMessage{
  font-size: 24rpx;
  color: #AAAAAA;
  margin-top: 10rpx;
}
.sendDate{
  color: #CCCCCC;
  font-size: 26rpx;
}
.left{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}