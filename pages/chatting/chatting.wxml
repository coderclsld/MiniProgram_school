<view  >
  <scroll-view scroll-y scroll-into-view='{{toView}}' style='height: {{scrollHeight}};'>
    <!-- <view class='scrollMsg'> -->
    <block wx:key="index" wx:for='{{msgList}}' wx:for-index="index">
      <!-- 发出（左） -->
      <view wx:if='{{item.speaker=="others"}}' id='msg-{{index}}' class="others">
        <view>
          <image class="head-img" src='https://i.loli.net/2017/08/21/599a521472424.jpg'></image>
        </view>
        <view class='left-msg'>{{item.message}}</view>
      </view>
      <!-- 用户发出（右） -->
      <view wx:else id='msg-{{index}}' class="our">
        <view class='right-msg'>{{item.message}}</view>
        <view class="our-tri triangle">
          <!-- <image  src='../../images/right_msg.png' mode='widthFix'></image> -->
        </view>
        <view>
          <image class="head-img" src='{{cusHeadIcon}}'></image>
        </view>
      </view>
    </block>
    <!-- 占位 作用：下滑到底部时，不让底部覆盖最后一条消息 
    <view style='width: 100%; height: 18vw;'></view> -->
    <view id="toView"></view>
  </scroll-view>
  <!-- <view class='input-room' style='margin-bottom: {{bottom}}px'>
    <input bindconfirm='sendClick' adjust-position='{{fasle}}' bindinput="getUserInput" value='{{inputVal}}' confirm-type='send' bindfocus='focus' bindblur='blur'></input>
    <button bindtap="submitTo" class='user_input_text' style="margin: 0 2% 0 3.2%;width: 22%;">
      发送
    </button> -->
    <view class="comment-fixed"  style="bottom:{{bottom}}px">
    <view class="cf-box">
      <input class="cf-content" bindconfirm='sendClick' bindinput="getUserInput" value='{{inputVal}}' bindfocus='focus' bindblur='blur' ></input>
      <view class="emoji iconfont icon-emoji" catchtap="emojiShowHide" ></view>
       <text class="cf-send touch-active"  bindtap="submitTo">发送</text>  
    </view>
    <view class="emoji-box {{isShow ? 'emoji-move-in' : 'emoji-move-out'}} {{isLoad ? 'no-emoji-move' : ''}}"  >
      <scroll-view scroll-y="true" bindscroll="emojiScroll" style="height:200px">
        <block wx:for="{{emojis}}" wx:for-item="e" wx:key="index">
          <view class="emoji-cell">
            <image class="touch-active" catchtap="emojiChoose" src="/imgs/{{e.emoji}}.png" data-emoji="{{e.char}}" data-oxf="{{e.emoji}}"></image>
          </view>
        </block>
      </scroll-view>
    </view>
</view>
</view>